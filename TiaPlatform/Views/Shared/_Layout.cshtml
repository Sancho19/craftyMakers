    <!-- Sidebar Menu (Mobile Only) -->
    <div id="sidebarMenu" class="custom-sidebar position-fixed top-0 start-0 vh-100 vw-100 bg-dark bg-opacity-75 d-none" style="z-index: 1050;">


        <div 
             style="width: 75%; max-width: 200px;"
             class="bg-black h-100 p-4 d-flex flex-column custom-sidebar-content">

            <!-- Close Button -->
            <button class="btn btn-close btn-close-white align-self-end mb-4" onclick="toggleSidebar()"></button>
            <!-- User Initial Avatar -->
            @if (SignInManager.IsSignedIn(User))
            {
                var currentUser = await UserManager.GetUserAsync(User);
                var initial = string.IsNullOrEmpty(currentUser?.FullName) ? "U" : currentUser.FullName[0].ToString().ToUpper();

                <div class="text-center mb-4">
                    <div class="bg-light text-dark fw-bold rounded-circle mx-auto d-flex align-items-center justify-content-center"
                         style="width: 60px; height: 60px; font-size: 1.5rem;">
                        @initial
                    </div>
                </div>
            }
            <!-- Welcome Message -->
            @if (SignInManager.IsSignedIn(User))
            {
                var currentUser = await UserManager.GetUserAsync(User);
                var fullName = currentUser?.FullName ?? "User";
                <div class="text-white text-center mb-4" style="font-size: 0.9rem;">
                    <span>Welcome <strong>@fullName</strong></span>
                </div>
            }

            <!-- Sidebar Links -->
            <ul class="navbar-nav flex-column gap-3">
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Resource" asp-action="AdminDashboard" >
                            <i class="bi bi-speedometer2 me-2"></i> Admin Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Admin" asp-action="CustomerPurchases">
                            <i class="bi bi-people me-2"></i> Customer Purchases
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Resource" asp-action="Create">
                            <i class="bi bi-cloud-upload me-2"></i> Upload a Resource

                        </a>
                    </li>
                }

                @if (User.IsInRole("Customer"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Cart" asp-action="Index">
                            <i class="bi bi-cart3 me-2"></i> Cart
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Order" asp-action="MyPurchases">
                            <i class="bi bi-bag-check me-2"></i> My Purchases
                        </a>
                    </li>
                }
            </ul>


            <!-- Spacer -->
            <div class="flex-grow-1"></div>

            <!-- Divider above logout -->
            <hr class="my-3 border-top border-light opacity-25" />

            <!-- Logout Button -->
            @if (SignInManager.IsSignedIn(User))
            {
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                    <button type="submit" class="btn w-100 text-danger mt-2">
                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                    </button>
                </form>
            }

        </div>
    </div>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark " style="background-color: transparent;">
            <div class="container-fluid d-flex align-items-center">
                @if (User.IsInRole("Admin"))
                {
                    <!-- Desktop-only hamburger for admin -->
                    <button class="navbar-toggler border-0 bg-transparent shadow-none me-2 d-none d-lg-block"
                            type="button"
                            onclick="toggleSidebar()"
                            style="outline: none;">
                        <span class="navbar-toggler-icon custom-toggler-icon"></span>
                    </button>
                }

                @if (User.IsInRole("Admin"))
                {
                    <!-- Centered brand for Admin (desktop and mobile) -->
                    <div class="position-absolute top-50 start-50 translate-middle d-block">
                        <a class="navbar-brand fs-5 fw-semibold text-black text-center"
                           asp-area=""
                           asp-controller="Home"
                           asp-action="Index"
                           style="letter-spacing: 0.5px;">
                            The Crafty Makers
                        </a>
                    </div>
                }
                else
                {
                    <!-- Left-aligned brand for others -->
                    <a class="navbar-brand fs-5 fw-semibold text-black"
                       asp-area=""
                       asp-controller="Home"
                       asp-action="Index"
                       style="letter-spacing: 0.5px;">
                        The Crafty Makers
                    </a>
                }



                <!-- Mobile hamburger (kept as-is) -->
                <button class="navbar-toggler border-0 bg-transparent shadow-none ms-auto d-lg-none"
                        type="button"
                        onclick="toggleSidebar()"
                        style="outline: none;">
                    <span class="navbar-toggler-icon custom-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <div class="w-100 d-flex flex-column flex-lg-row align-items-center justify-content-between">
                        <!-- Center nav links -->
                        <ul class="navbar-nav mx-auto mb-2 mb-lg-0 d-flex flex-row gap-3">
                         

                            @if (User.IsInRole("Customer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-black position-relative" asp-controller="Cart" asp-action="Index">
                                        <i class="bi bi-cart3 me-1"></i> Cart
                                        <span id="cartCount"
                                              class="badge bg-danger rounded-circle position-absolute"
                                              style="top: -0.4rem; right: -1.3rem; width: 1.3rem; height: 1.3rem; font-size: 0.75rem;">
                                            0
                                        </span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-black" asp-controller="Order" asp-action="MyPurchases">
                                        <i class="bi bi-bag-check me-2"></i> My Purchases
                                    </a>
                                </li>
                            }
                        </ul>

                        <!-- Login / Logout Area -->
                        <ul class="navbar-nav d-flex flex-row align-items-center gap-2 text-center text-sm-start">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                var currentUser = await UserManager.GetUserAsync(User);
                                var fullName = currentUser?.FullName ?? User.Identity?.Name;

                                // Show Welcome only if NOT Admin
                                if (!User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-black" asp-area="Identity" asp-page="/Account/Manage/Index">
                                            <i class="bi bi-person-circle me-1"></i>
                                            Welcome @fullName
                                        </a>
                                    </li>
                                
                                }
                                <li class="nav-item">
                                    <form class="m-0" asp-area="Identity" asp-page="/Account/Logout"
                                          asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button type="submit"
                                                class="nav-link btn btn-link text-danger"
                                                style="text-decoration: none;">
                                            <i class="bi bi-box-arrow-right me-1"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-black" asp-area="Identity" asp-page="/Account/Register">
                                        <i class="bi bi-person-plus me-1"></i> Sign Up
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-black" asp-area="Identity" asp-page="/Account/Login">
                                        <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

        </nav>
    </header>


    <div class="container" style="padding-top: 6rem; padding-bottom: 6rem">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <footer class="footer mt-auto py-2 bg-light border-top text-center">
        <div class="container px-3">
            <small class="text-muted d-block d-sm-inline">
                The Crafty Makers &copy; 2025 — Developed by WebCraft Solutions
            </small>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        window.addEventListener('load', function () {
            const preloader = document.getElementById('preloader');
            setTimeout(() => {
                preloader.classList.add('hidden');
            }, 3000); // Wait 3 seconds before hiding
        });
                       function toggleSidebar() {
            const sidebar = document.getElementById('sidebarMenu');
            sidebar.classList.toggle('show');
        }


       
    </script>


</body>
</html>
<script>
    $(document).ready(function () {
        $.get("/Cart/GetCartItemCount", function (data) {
            if (data.count > 0) {
                $('#cartCount').text(data.count).removeClass('d-none');
            } else {
                $('#cartCount').addClass('d-none');
            }
        });
    });
      function updateCartBadge() {
        $.get("/Cart/GetCartItemCount", function (data) {
            const badge = $('#cartCount');
            if (data.count > 0) {
                badge.text(data.count).removeClass('d-none');
            } else {
                badge.addClass('d-none');
            }
        });
    }

    // Initial badge load
    $(document).ready(updateCartBadge);
</script>
